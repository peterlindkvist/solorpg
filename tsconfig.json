{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es2021",
    "declaration": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "moduleDetection": "force",
    "allowUnreachableCode": false,
    "module": "commonjs",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017", "es2019", "es2020", "es2021"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
  ],
}
