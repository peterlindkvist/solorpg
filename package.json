{
  "name": "solorpg",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch": "npm-watch server",
    "start": "yarn server & yarn web",
    "server": "npx functions-framework --target=solorpg",
    "web": "cd ./clients/web && yarn dev",
    "build": "cd ./clients/web && rm -Rf ../../server/public && yarn build && cp -r ./dist ../../server/public",
    "deploy": "gcloud functions deploy solorpg --runtime=nodejs18 --trigger-http --allow-unauthenticated --set-env-vars `cat .env`",
    "release": "yarn build && yarn deploy",
    "test": "yarn --cwd ./clients/web test"
  },
  "watch": {
    "start": {
      "patterns": [
        "server/**/*.js",
        "server.js"
      ],
      "extensions": "js,jsx"
    }
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/storage": "^7.7.0",
    "@types/balanced-match": "^3.0.2",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.16",
    "busboy": "^1.6.0",
    "dotenv": "^16.4.1",
    "expr-eval": "^2.0.2",
    "json5": "^2.2.3",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "mime-type": "^4.0.0",
    "openai": "^4.47.1",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "npm-watch": "^0.11.0"
  }
}
