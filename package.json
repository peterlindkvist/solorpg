{
  "name": "solorpg",
  "version": "1.0.0",
  "main": "server-minimal.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch": "npm-watch server",
    "start": "yarn server & yarn web",
    "server": "npx functions-framework --target=solorpg",
    "web": "cd ./clients/web && yarn dev",
    "build": "cd ./clients/web && rm -Rf ../../server/public && yarn build && cp -r ./dist ../../server/public",
    "deploy": "gcloud functions deploy solorpg --runtime=nodejs20 --gen2 --region europe-north1 --trigger-http --allow-unauthenticated --set-env-vars `./scripts/env-to-gcloud.sh`",
    "release": "yarn build && yarn deploy",
    "test": "yarn --cwd ./clients/web test",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write"
  },
  "watch": {
    "start": {
      "patterns": ["server/**/*.js", "server.js"],
      "extensions": "js,jsx"
    }
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.28.0",
    "@google-cloud/functions-framework": "^3.4.0",
    "@google-cloud/storage": "^7.13.0",
    "@types/balanced-match": "^3.0.2",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^22.0.0",
    "busboy": "^1.6.0",
    "dotenv": "^16.4.1",
    "expr-eval": "^2.0.2",
    "json5": "^2.2.3",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "mime-type": "^4.0.0",
    "openai": "^4.47.1",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "npm-watch": "^0.11.0"
  }
}
